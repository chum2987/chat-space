.chat-main__message-list__all
  .chat-main__message-list__all__title
    .chat-main__message-list__all__title__name
      = message.user.name
    .chat-main__message-list__all__title__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__all__messages
    - if message.content.present?
      %p.chat-main__message-list__all__messages__content
        = message.content
    = image_tag message.image.url, class: ".chat-main__message-list__all__messages__image" if message.image.present?