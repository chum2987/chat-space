.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path, class: "icon" do
          = icon("far", "edit")
        = link_to edit_user_path(current_user), class: "icon" do
          = icon("fas", "cog")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__link
        = link_to group_messages_path(group), class: "groups" do
          .side-bar__group-list__link__name
            = group.name
          .side-bar__group-list__link__message
            = group.show_last_message

