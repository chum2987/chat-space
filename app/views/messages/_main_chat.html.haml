.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-contents
      .chat-main__group-info__left-contents__name
      = @group.name
      .chat-main__group-info__left-contents__members
      - @group.group_users.each do |group_user|
        = group_user.user.name

    .chat-main__group-info__edit
      = link_to edit_group_path(@group), class: "edit" do
        Edit

  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: ".chat-main__message-form__input" , placeholder: 'type a message'
      .chat-main__message-form__picture-icon
        = f.label :image, class: ".chat-main__message-form__picture-icon" do
          = icon("fas", "image", class: "icon")
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: ".chat-main__message-form__send"
       